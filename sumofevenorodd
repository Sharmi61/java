import java.io.*;
import  java.util.*;

// Read only region start
class UserMainCode
{

	public int EvenOddDigitsSum(int input1,String input2){
		// Read only region end
		int n=input1,r=0,sum=0;
	
	String e="even";
	if(input2.equals(e)){
		while(n>0){
			r=n%10;
			if(r%2==0)sum=sum+r;
			n=n/10;
		}}
		else{
			while(n>0){
			r=n%10;
			if(r%2!=0)sum=sum+r;
			n=n/10;
		}
		}return sum;
	}}
	
    


		
	
